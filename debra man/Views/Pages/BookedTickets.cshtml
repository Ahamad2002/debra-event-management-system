@model List<debra_man.Controllers.TicketSale>

@{
    ViewData["Title"] = "Booked Tickets";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Your Booked Tickets</h2>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Ticket Type</th>
                                <th>Sale Date</th>
                                <th>Status</th>
                                <th>Amount Rs</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var ticket in Model)
                                {
                                    <tr>
                                        <td>@ticket.EventName</td>
                                        <td>@ticket.TicketType</td>
                                        <td>@ticket.SaleDate.ToShortDateString()</td>
                                        <td>@ticket.SaleStatus</td>
                                        <td>@ticket.SaleAmount.ToString("N2")</td>
                                        <td>
                                            <form method="post" action="/Pages/DeleteBookedTicket">
                                                <input type="hidden" name="ticketSaleId" value="@ticket.TicketSaleID" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No booked tickets found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
